<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Izzy">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="top|center_vertical|fill_vertical|center" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/microizzy" android:id="@+id/linearLayout2">
        <ImageView
                android:layout_height="150dp" app:srcCompat="@drawable/asistenta"
                android:id="@+id/asistenta"
                android:layout_width="150dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:contentDescription="@string/imgizzy"/>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/cardView" android:padding="20dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/asistenta" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="@string/tvescuchandotituloizzy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tvescuchandoizzytit"
                        android:enabled="false"
                        android:textColor="@color/cardview_dark_background"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/tvescuchandoizzy"
                        android:text="@string/tvescuchandoizzy" tools:text="@string/tvescuchandoizzy"
                        android:contentDescription="@string/tvescuchandoizzy"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/cardView2" android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/cardView">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="@string/tvrespondiendotituloizzy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:textColor="@color/cardview_dark_background"
                        android:enabled="false"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/tvrespondiendoizzy"
                        android:text="@string/tvrespondiendoizzy" tools:text="@string/tvrespondiendoizzy"
                        android:contentDescription="@string/tvrespondiendoizzy"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/microizzy"
            android:id="@+id/microizzy"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/imgmicroizzy"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"/>
</android.support.constraint.ConstraintLayout>