<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".splash" android:background="@android:color/black" android:orientation="vertical"
        android:gravity="center_vertical|center">

    <TextView
            android:text="@string/tvJsplash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvsplash" tools:text="@string/tvJsplash"
            android:textSize="50sp" android:textColor="@color/colorBarraMain" android:fontFamily="casual"
            android:textStyle="bold" android:textAllCaps="false" android:textAlignment="center"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" app:srcCompat="@drawable/agent2" android:id="@+id/imageView"
            android:contentDescription="@string/imgjeffy" android:scaleType="centerCrop" tools:focusable="auto"/>
</LinearLayout>